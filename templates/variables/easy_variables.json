                    "5108",
                    "9508",
                    "Server"
                ],
                "default": "9508"
            }
        },
        "thermal.Policy":{
            "chassisType": {
                "description": "The Type of Chassis to Apply this Policy to.",
                "enum":[
                    "5108",
                    "9508"
                ],
                "default": "9508"
            }
