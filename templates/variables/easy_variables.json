                    "Virtualization_tpm",
                    "Windows",
                    "Windows_tpm"
                ],
                "default": "Virtualization_tpm"
            }
        },
        "boot.PrecisionPolicy":{
            "boot.Localdisk":{
                "description": "Slot options for a Localdisk boot Policy.",
                "FIAttached":[
                    "1-205",
                    "FMEZZ1-SAS",
                    "MRAID",
                    "MRAID1",
                    "MRAID2",
                    "MSTOR-RAID",
                    "MSTOR-RAID-1",
                    "MSTOR-RAID-2"
